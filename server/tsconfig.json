{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist"
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "lib": ["ES2020"],
  "typeRoots": ["node_modules/@types"],
  "types": ["node", "express"]
}
